%{ 
 // #include "y.tab.h"

%}

%%
[;].* {fprintf(yyout, "");}

[a-z] {fprintf(yyout,"%c",yytext[0]-32);}

. {fprintf(yyout, "%s", yytext); }
%%

yywrap();

int main(char **argcv)
{

	extern FILE *yyin, *yyout; 
  	yyin = fopen(argcv[1], "r"); 
  	yyout = fopen(argcv[2], "w"); 
	yylex();
	return 0;

}


